@import './mixin.styl'

/* page height */
html,
body
  height: 100%

/* for responsive */
// default html font-size: 16px
// landscape: when width larger height
@media only screen and (orientation: landscape) and (max-height: 320px)
  html
    font-size: 14px
@media only screen and (orientation: portrait) and (max-width: 320px) // iphone 5
  html
    font-size: 14px

/* app */
body
  font-family: "-apple-system", "Helvetica Neue", Roboto, "Segoe UI", sans-serif
  background-color: $mainBgColor
  margin: 0
  // remove gray highlight when click
  -webkit-tap-highlight-color: transparent
  // remove user long press event
  user-select: none
  &.disable-scroll
    // overflow-y: hidden // 手机还是可以在 abs-root 域下上下滑动
    #abs-root
      overflow-y: hidden // 不在body，它导致 scroll 到顶部
p
  margin: 0

/* color class */
.main-back
  background-color: $mainColor
.main-color
  color: $mainColor
.gray-color
  color: $grayColor
.orange-color
  color: $orangeColor
.title-color
  color: $titleColor
.info-color
  color: $infoColor
.icon-color
  color: $iconColor
.green-color
  color: #69d793
.light-line
  border-bottom: 1px solid $lightLineColor
.heavy-line
  border-bottom: 1px solid $heavyLineColor

/* other */
.page-part
  margin-bottom: 15px
.tk-search-label
  .mint-cell-wrapper
    background: none

/* component */
.iconfont
  font-size: 1rem
  &.icon-lg
    font-size: 1.2rem
.iconfont-svg
  width 1.5rem
  height 1rem
  vertical-align -0.15rem
  fill currentColor
  overflow hidden
.arrow-icon
  position: relative
  display: inline-block
  getWH(14)
  &::after
    getWH(7)
    border-color: #bbb
    right: r(2)
    top: r(2)
    transform: rotate(135deg)
  &.up
    &::after
      top: r(6)
      transform: rotate(-45deg)

.page-infinite-loading
  text-align: center
  height: 50px
  line-height: 50px
  span
    display: inline-block
    vertical-align: middle
    margin 0 auto
.pointer
  display: inline-block
.spinner
  display: inline-block
  margin-top: 7px

/* support */
.masking-page
  overflow: hidden
.hide
  display: none
.rotate
  transform: rotate(180deg)
.fixed-navbar
  position: fixed
  width: 100%
  top: r(48)
  z-index: 200
.ellipsis
  overflow: hidden
  text-overflow: ellipsis
  white-space: nowrap
.vert-middle
  vertical-align: middle
.bg-image
  background-size: contain
  background-position: center
  background-repeat: no-repeat
  &.cover
    background-size: cover
  &.stretch
    background-size: 100% 100%
for prop in right center left
  .text-{prop}
    text-align: prop

/* flex system */
.flex-box
  /* https://css-tricks.com/snippets/css/a-guide-to-flexbox */
  display: flex
  for prop in column row
    &.direction-{prop}
      flex-direction: prop
  for prop in space-between space-around
    &.{prop}
      justify-content: prop
  &.flex-wrap
    flex-wrap: wrap
  &.align-end
    align-items: flex-end
  &.align-center
    align-items: center
  &.flex-start
    justify-content: flex-start
  &.flex-center
    justify-content: center
  &.flex-end
    justify-content: flex-end

  /* for items */
  for n in 1 2 3 4 5 6 12
    .flex-{n}
      flex: n
  .flex-item-end
    align-content: flex-end
  .flex-self-center
    align-self: center
  .flex-self-end
    align-self: flex-end

// tab item 字体大小，就在这里修改吧，修改太频繁了
.mint-tab-item-label
  font-size: 1rem
.mint-header.is-fixed
  z-index: 200
.mint-msgbox-wrapper
  .mint-msgbox
    top: 43%
    transform: translate3d(-50%,-50%,0)
.mint-cell-allow-right:after
  border: 1px solid #ccc
  border-bottom-width: 0
  border-left-width: 0
  width: 9px
  height: 9px
.mint-cell-wrapper
  background-image: linear-gradient(180deg,#f5f5f5,#f5f5f5 50%,transparent)
.mint-toast
  z-index 3000
  .mint-toast-wrapper
    top: 43%
.mint-indicator
